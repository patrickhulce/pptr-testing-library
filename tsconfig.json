{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "preserveWatchOutput": true,
    "lib": ["es2017", "dom"],
  },
  "include": [
    "lib/**/*"
  ]
}
